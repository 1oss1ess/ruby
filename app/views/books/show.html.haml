%h2 Deatails about #{@book.title}

%ul#details
    %li
        Genre on:
        = @book.genre
        
    %li
        ISBN on:
        = @book.isbn_number
        
    %li
        Publish on:
        = @book.publish_date.strftime("%B %d, %Y")

%h3 Description:

%p#description= @book.description

= link_to 'Edit info', edit_book_path(@book)

= link_to 'Find Books With Same Author', search_similar_books_url(id: @book.id)

= link_to 'Delete', book_path(@book), :method => :delete

= link_to 'Back to book list', books_path